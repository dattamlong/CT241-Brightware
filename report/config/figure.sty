\newcommand{\figmini}[4][.95]{%
  \par
  \begin{center}
    \begin{minipage}{#1\linewidth}
      \captionsetup{type=figure, width=.95\linewidth}
      \includegraphics[width=\linewidth]{#2}
      \caption{\centering #4}
      \label{#3}
    \end{minipage}%
  \end{center}
}

